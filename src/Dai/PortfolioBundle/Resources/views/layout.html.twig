<!DOCTYPE html>
<html>
<head>
    <title>
        {% block title %}
            Dai Gondo
        {% endblock %}

    </title>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/daiportfolio/js/node_modules/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/daiportfolio/css/animate.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/daiportfolio/css/style.css') }}" type="text/css" media="all" />
    {% endblock %}

    <link href='http://fonts.googleapis.com/css?family=Nunito' rel='stylesheet' type='text/css'>
    <style>
        body {
            font-family: Futura, 'Nunito', sans-serif;
        }
    </style>
</head>
<body>

    

    <div class="container">
        {% if app.user %}
            <div class="page-header">
                <div class="row">
                    <div class="col-md-3">
                        <a href="{{ path ('dai_work_index') }}">
                            <h1>Admin</h1>
                        </a>
                    </div>                    
                    <div class="col-md-9 text-right">
                        <a href="{{ path ('dai_category_add') }}" class="btn btn-default">Add a Category</a>
                        <a href="{{ path ('dai_work_add') }}" class="btn btn-primary">Add a Work</a>
                    </div>                  
                </div>
            </div>

            <div class="text-right">
                {# Bonjour {{ app.user.username }} #}
                <a href="{{ path('logout') }}" class="btn btn-sm btn-default">Logout</a>            
            </div>
        {% endif %}

        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-info">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        {% block content %}
        {% endblock %}
    </div>

    {% block javascripts %}
    {% endblock %}

</body>
</html>