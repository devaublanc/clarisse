<!DOCTYPE html>
<html>
<head>
    <title>
        {% block title %}
            Clarisse de Vaublanc | Administration
        {% endblock %}
    </title>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/daiportfolio/js/node_modules/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/daiportfolio/css/style.css') }}" type="text/css" media="all" />
    {% endblock %}
</head>
<body>

    <div class="container">
        {% if app.user %}
            <div class="page-header">
                <div class="row">
                    <div class="col-md-3">
                        <a href="{{ path ('dai_work_index') }}">
                            <h1>Administration</h1>
                        </a>
                    </div>
                    <div class="col-md-9 text-right">
                        <a href="{{ path ('dai_category_add') }}" class="btn btn-default">Ajouter une catégorie</a>
                        <a href="{{ path ('dai_work_add') }}" class="btn btn-primary">Ajouter une peinture</a>
                    </div>
                </div>
            </div>

            <div class="text-right">
                <p>Bonjour <strong>{{ app.user.username }}</strong> </p>
                <a href="{{ path('logout') }}" class="btn btn-xs btn-default">Se déconnecter</a>
            </div>
        {% endif %}

        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert alert-info">
                {{ flashMessage }}
            </div>
        {% endfor %}

        {% block content %}
        {% endblock %}
    </div>

    {% block javascripts %}
    {% endblock %}

</body>
</html>
