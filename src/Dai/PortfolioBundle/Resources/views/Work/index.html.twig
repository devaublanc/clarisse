{% extends 'DaiPortfolioBundle::layout.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Work</h1>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>                
                <th>Preview</th>
                <th>Tags</th>
                <th>Date</th>
            </tr>

        </thead>
        <tbody>
            {% for work in works %}
                <tr>
                    <td>{{ work.id }}</td>
                    <td>{{ work.title }}</td>
                    <td>
                        <img
                          src="{{ asset(work.image.uploadDir ~ '/' ~ work.image.id ~ '.' ~ work.image.url) }}"
                          alt="{{ work.image.alt }}"
                          style="width: 50px; height: 50px;"
                          class="img-circle img-thumbnail"
                        />
                    </td>

                    <td>
                        {% for tag in work.tags %}
                            {{ tag.name }}
                        {% endfor %}
                    </td>
                    <td>{{ work.date|date('d-m-Y') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul class="pagination">        
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active"{% endif %}>
                <a href="{{ path('dai_portfolio_home', {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}