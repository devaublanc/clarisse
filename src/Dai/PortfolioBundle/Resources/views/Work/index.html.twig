{% extends 'DaiPortfolioBundle::layout.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Work</h1>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>                
                <th>Image</th>
                <th>Tags</th>
                <th>Date</th>
            </tr>

        </thead>
        <tbody>
            {% for work in works %}
                <tr>
                    <td>{{ work.id }}</td>
                    <td>{{ work.title }}</td>
                    <td>{{ work.image.url }}</td>
                    <td>Tags</td>
                    <td>{{ work.date|date('d-m-Y') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul class="pagination">        
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active"{% endif %}>
                <a href="{{ path('dai_portfolio_home', {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}