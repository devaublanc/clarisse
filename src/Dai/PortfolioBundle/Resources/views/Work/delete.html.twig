{% extends "DaiPortfolioBundle::layout.html.twig" %}

{% block title %}
    Delete this work - {{ parent() }}
{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>Delete work</h1>
    </div>

    <p>
        Are you sure to delete "{{ work.title }}" ?
    </p>

    {# On met l'id de l'annonce dans la route de l'action du formulaire #}
    <form action="{{ path('dai_portfolio_delete', {'id': work.id}) }}" method="post">
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        {{ form_rest(form) }}
    </form>

{% endblock %}