{% extends 'DaiPortfolioBundle::layout.html.twig' %}

{% block content %}

    <div class="container">
        
        <div class="page-header">
            <h2>Edit work</h2>
        </div>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.title, "Title", {'label_attr': {'class': 'control-label'}}) }}
                {{ form_errors(form.title) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description, "Description", {'label_attr': {'class': 'control-label'}}) }}
                {{ form_errors(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>


            <div class="form-group">
                {{ form_errors(form.published) }}
                <label>
                    {{ form_widget(form.published) }} {{ form_label(form.published, "Published") }}
                </label>
            </div>



            {{ form_rest(form) }}

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Envoyez le formulaire"/>
            </div>


        {{ form_end(form) }}
    </div>


{% endblock %}

