{% extends 'DaiPortfolioBundle::layout.html.twig' %}

{% block content %}

    <div class="container">
        <div class="col-md-6 col-md-offset-2">
            <div class="page-header">
                <h2>Edit work</h2>
            </div>

            {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.title, "Title", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description, "Description", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.position, "Position", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.position) }}
                    {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.category, "Category", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.category) }}
                    {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">                    
                    {{ form_errors(form.image) }}
                    {{ form_widget(form.image) }}
                </div>
                

                <div class="form-group">
                    {{ form_errors(form.published) }}
                    <label>
                        {{ form_widget(form.published) }} {{ form_label(form.published, "Published") }}
                    </label>
                </div>

                {{ form_rest(form) }}

                <div class="form-group overflow">
                    <input type="submit" class="btn btn-primary pull-right" value="Save"/>
                </div>


            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}

