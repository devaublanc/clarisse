{% extends 'DaiPortfolioBundle::layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="col-md-6 col-md-offset-2">
            <div class="page-header text-center">
                <h1>Authentification</h1>
            </div>
            {# S'il y a une erreur, on l'affiche dans un joli cadre #}
              {% if error %}
                <div class="alert alert-danger">{{ error.message }}</div>
              {% endif %}

            {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
            <form action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <label for="username">Login :</label>
                    <input type="text" id="username" name="_username" placeholder="Login" value="{{ last_username }}" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="password">Password :</label>
                    <input type="password" id="password" class="form-control" placeholder="Password" name="_password" />
                </div>

                <input type="submit" class="btn btn-primary btn-block" value="Signin" />
            </form>
        </div>
    </div>
{% endblock %}

